<section class="pt-32 pb-20 px-4">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center">
      <img src="{{ config.logo.src }}" alt="{{ config.title }} icon" class="w-32 h-32 md:w-40 md:h-40 mx-auto mb-8 animate-fade-in-up rounded-[22%] shadow-lg">

      <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 animate-fade-in-up" style="animation-delay: 0.05s;">
        {{ config.title }}
      </h1>

      <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 mb-12 max-w-3xl mx-auto animate-fade-in-up" style="animation-delay: 0.15s;">
        {{ config.description }}
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-fade-in-up" style="animation-delay: 0.25s;">
        <span class="inline-flex items-center px-8 py-4 bg-gray-200 dark:bg-gray-700 text-gray-600 dark:text-gray-300 rounded-xl">
          <span class="font-semibold">Coming Soon</span>
        </span>
      </div>
    </div>
  </div>
</section>
