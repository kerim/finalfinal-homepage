<section id="features" class="py-20 px-4 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">Features</h2>
      <p class="text-xl text-gray-600 dark:text-gray-400">Everything you need, nothing you don't</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for feature in config.features %}
      <div class="bg-white dark:bg-gray-900 p-8 rounded-2xl shadow-lg hover:shadow-xl transition-shadow">
        <div class="text-5xl mb-4">{{ feature.icon }}</div>
        <h3 class="text-2xl font-bold mb-3">{{ feature.title }}</h3>
        <p class="text-gray-600 dark:text-gray-400">{{ feature.description }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
